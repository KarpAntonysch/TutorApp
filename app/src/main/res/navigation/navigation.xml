<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.tutor.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" />
    <fragment
        android:id="@+id/statisticFragment"
        android:name="com.example.tutor.statistic.StatisticFragment"
        android:label="fragment_statistic"
        tools:layout="@layout/fragment_statistic" />
    <fragment
        android:id="@+id/studentJournalFragment"
        android:name="com.example.tutor.journal.studentJournal.StudentJournalFragment"
        android:label="fragment_student_journal"
        tools:layout="@layout/fragment_student_journal" >
        <action
            android:id="@+id/action_studentJournalFragment_to_addStudentToJournal"
            app:destination="@id/addStudentToJournal" />
    </fragment>
    <fragment
        android:id="@+id/addStudentToJournal"
        android:name="com.example.tutor.journal.addStudentToJournal.AddStudentToJournalFragment"
        android:label="fragment_add_student_to_journal"
        tools:layout="@layout/fragment_add_student_to_journal" />
</navigation>